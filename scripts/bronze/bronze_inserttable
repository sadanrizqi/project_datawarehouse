/*
Stored Procedure: Load Bronze Layer (Source -> Bronze)

Script Purpose:
    This stored procedure loads data into the 'bronze' schema from external CSV files.
    It performs the following actions:
      - Truncates the bronze tables before loading data.
      - Uses the `BULK INSERT` command to load data from csv files to bronze tables.


Usage Example:
    EXEC bronze.load_bronze;
*/


CREATE OR ALTER PROCEDURE bronze.load_bronze AS --it's a script to load same procedure for next (use it where i have daily data process)
BEGIN
	
	DECLARE @start_time DATETIME;
	DECLARE @end_time   DATETIME;

	SET @start_time = GETDATE();
	-- INSERT TABLE bronze.crm_cust_info FROM CSV FILE
	TRUNCATE TABLE bronze.crm_cust_info

	BULK INSERT bronze.crm_cust_info
	FROM 'C:\Users\Sadan Rizqi\Documents\COURSES\SQL - 30 HOURS\Project Warehousing\sql-data-warehouse-project\datasets\source_crm\cust_info.csv'
	WITH (
		FIRSTROW = 2,
		FIELDTERMINATOR = ',',
		TABLOCK 
	);

	-- INSERT TABLE bronze.crm_prd_info FROM CSV FILE
	TRUNCATE TABLE bronze.crm_prd_info

	BULK INSERT bronze.crm_prd_info
	FROM 'C:\Users\Sadan Rizqi\Documents\COURSES\SQL - 30 HOURS\Project Warehousing\sql-data-warehouse-project\datasets\source_crm\prd_info.csv'
	WITH (
		FIRSTROW = 2,
		FIELDTERMINATOR = ',',
		TABLOCK
	);


	-- INSERT TABLE bronze.crm_prd_info FROM CSV FILE
	TRUNCATE TABLE bronze.crm_sales_details

	BULK INSERT bronze.crm_sales_details
	FROM 'C:\Users\Sadan Rizqi\Documents\COURSES\SQL - 30 HOURS\Project Warehousing\sql-data-warehouse-project\datasets\source_crm\sales_details.csv'
	WITH (
		FIRSTROW = 2,
		FIELDTERMINATOR = ',',
		TABLOCK
	);

	-- INSERT TABLE bronze.erp_cust_vaz12 FROM CSV FILE
	TRUNCATE TABLE bronze.erp_cust_vaz12

	BULK INSERT bronze.erp_cust_vaz12
	FROM 'C:\Users\Sadan Rizqi\Documents\COURSES\SQL - 30 HOURS\Project Warehousing\sql-data-warehouse-project\datasets\source_erp\CUST_AZ12.csv'
	WITH (
		FIRSTROW = 2,
		FIELDTERMINATOR = ',',
		TABLOCK
	);

	-- INSERT TABLE bronze.erp_loc_a101 FROM CSV FILE
	TRUNCATE TABLE bronze.erp_loc_a101

	BULK INSERT bronze.erp_loc_a101
	FROM 'C:\Users\Sadan Rizqi\Documents\COURSES\SQL - 30 HOURS\Project Warehousing\sql-data-warehouse-project\datasets\source_erp\LOC_A101.csv'
	WITH (
		FIRSTROW = 2,
		FIELDTERMINATOR = ',',
		TABLOCK
	);

	-- INSERT TABLE bronze.erp_px_cat FROM CSV FILE
	TRUNCATE TABLE bronze.erp_px_cat

	BULK INSERT bronze.erp_px_cat
	FROM 'C:\Users\Sadan Rizqi\Documents\COURSES\SQL - 30 HOURS\Project Warehousing\sql-data-warehouse-project\datasets\source_erp\PX_CAT_G1V2.csv'
	WITH (
		FIRSTROW = 2,
		FIELDTERMINATOR = ',',
		TABLOCK
	);
	SET @end_time = GETDATE();
	PRINT '>>>> Load duration: ' + CAST(DATEDIFF(second, @start_time, @end_time) AS NVARCHAR) + ' seconds'
END
